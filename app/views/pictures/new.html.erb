<% provide(:title, 'Add Picture to Gallery') %>
<h1>Add Picture to Gallery</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @picture, :url => pictures_path, html: {multipart: true} do |f| %>
      
      <%= f.hidden_field :gallery_id, :value => params[:gallery_id] %>
      
      <%= f.label :image %>
      <%= f.file_field :image, multiple: 'multiple', class: 'form-control' %>

      <%= f.submit "Submit Picture", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>